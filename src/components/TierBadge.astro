---
// src/components/TierBadge.astro
import type { Tier } from '../lib/types';
import { TIER_INFO } from '../lib/types';

interface Props {
  tier: Tier;
  size?: 'sm' | 'md' | 'lg';
  showLabel?: boolean;
}

const { tier, size = 'md', showLabel = true } = Astro.props;
const info = TIER_INFO[tier];

const sizeClass = {
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-3 py-1',
  lg: 'text-base px-4 py-1.5',
}[size];

// Subtle, professional color scheme
const colorClass = {
  Laureate: 'bg-amber-50 text-amber-800 border-amber-200',
  Authority: 'bg-violet-50 text-violet-800 border-violet-200',
  Master: 'bg-blue-50 text-blue-800 border-blue-200',
  Diplomate: 'bg-emerald-50 text-emerald-800 border-emerald-200',
}[tier];
---

<span class={`inline-flex items-center gap-1 rounded border font-medium ${sizeClass} ${colorClass}`}>
  {showLabel && <span>{info.label}</span>}
</span>
